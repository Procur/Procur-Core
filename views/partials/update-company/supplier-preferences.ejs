<div id="preferencesSupplier">
  <h4>Preferences</h4>
  <form action="/supplier/update/preferences" method="post" id="supplierPreferencesForm">
    <div class="formWrapper">
      <div class="row">

        <div class="col-sm-6">
          <h5>Preferred Buyer Type*</h5>
          <div class="styledSelect">
            <select name="preferredBuyerType">
              <option value="<%= supplier.preferredBuyerType %>" selected="selected"><%= supplier.preferredBuyerType %></option>
              <%- partial('../edit-dropdowns/edit-pref-buyer-type') %>
            </select>
          </div>
          <h5>Preferred Buyer Language</h5>
          <div class="styledSelect">
            <select name="preferredBuyerLanguage" id="preferredBuyerLanguage">
              <%- partial('../edit-dropdowns/edit-pref-buyer-language') %>
              <% if (supplier.preferredBuyerLanguage) { %>
                <script language="javascript">$("#preferredBuyerLanguage").val("<%=supplier.preferredBuyerLanguage%>");</script>
              <% } else { %>
              <script language="javascript">$("#preferredBuyerLanguage").val("");</script>      
              <% } %>
            </select>
          </div>
        </div> <!-- End of First Column -->

        <div class="col-sm-6">
          <h5>Preferred Buyer Location</h5>
          <div class="styledSelect">
            <select name="preferredBuyerLocation" id="preferredBuyerLocation">
              <script language="javascript">print_country("preferredBuyerLocation");</script>

            </select>
          </div>
          <% if (supplier.preferredBuyerLocation) { %>
            <script language="javascript">$("#preferredBuyerLocation").val("<%=supplier.preferredBuyerLocation%>");</script>
          <% } else { %>
            <script language="javascript">$("#preferredBuyerLocation").val("");</script>
          <% } %>
        </div> <!-- End of Second Column -->
        
      </div> <!-- End of outside row -->
    </div><!-- End of formWrapper -->
    <div class="row"><button class="continueButton" type="submit">Save&nbsp;&nbsp; <i class="fa fa-check"></i></button></div>
  </form>
</div>
