<div id="photosDownloadsBuyer">
  <h4>Photos &amp; Downloads</h4>
  <div class="formWrapper">
    <div class="row">
      <div class="col-sm-6">
        <h3>Downloadable Files</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
      <% if (buyerDownload) { %>
        <ul class="downloadsList">
        <% for (var i = 0; i<buyerDownload.length; i++){ %>
          <li>
            <%= buyerDownload[i].title %><a href="#"><i class="fa fa-download"></i></a><a href="#" title="Remove"><i class="fa fa-times"></i></a>
          </li>
        <% } %>
        </ul>
      <% } %>
      </div>
    </div>
      <form id="downloadablesForm" action="/downloads/process" method="post" enctype="multipart/form-data">
        <% for (var i = 0; i<5-buyerDownload.length; i++){ %>
          <div class="row">
            <div class="col-sm-6">
              <input type="text" name="<%='downloadTitle'+i %>" placeholder="Title"/>
            </div>
            <div class="col-sm-6">
              <input inline="true" type="file" name="<%='downloadURI'+i %>"  accept="image/*"/>
            </div>
          </div>
        <% } %>
      <div class="row">
        <div class="col-sm-6 col-sm-offset-6">
          <input type="submit" class="uploadButton" value="Upload Files">
        </div>
      </div>
    </form>
    <div class="row">
      <div class="col-sm-6">
        <h3>Company Photos</h3>
      </div>
    </div>
  </div>
</div><!-- END #photosDownloadsBuyer -->
