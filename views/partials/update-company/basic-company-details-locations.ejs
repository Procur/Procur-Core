<h5>Official Address</h5>
<% if (companyLocations["showHq"] === false) { %>
  <div><input class="address1" type="text" name="companyAddress1" value="<%= companyLocations["company-isHq"].addressLine1 %>" placeholder="Address Line #1"></div>
  <div><input class="address2" type="text" name="companyAddress2" value="<%= companyLocations["company-isHq"].addressLine2 %>" placeholder="Address Line #2"></div>
  <div class="styledSelect">
    <select class="companyCountry" name="companyCountry" id="companyCountry" onchange="print_state('companyProvince',this.selectedIndex);"> 
      
    </select>
  </div>

  <div class="row insideForm">
    <div class="col-sm-7">
      <div class="styledSelect inputColumnL">
        <select class="companyProvince" name="companyProvince" id="companyProvince">
          <option value="<%= companyLocations["company-isHq"].province %>" selected="selected"><%= companyLocations["company-isHq"].province %></option>
        </select><script language="javascript">edit_country("<%= companyLocations["company-isHq"].country %>", "companyCountry");</script>
      </div>
    </div>

    <div class="col-sm-5 inputColumnR">
      <div class="breakForm">
        <input type="text" class="companyPostalCode" name="companyPostalCode" value="<%= companyLocations["company-isHq"].postalCode %>" placeholder="Postal Code">
      </div>
    </div>
  </div>
<% } else { %>
  <% for (var x = 0; x < companyLocations["company-notHq"].length; x++) { %>
    <div><input class="address1" type="text" name="companyAddress1" value="<%= companyLocations["company-notHq"][x].addressLine1 %>" placeholder="Address Line #1"></div>
    <div><input class="address2" type="text" name="companyAddress2" value="<%= companyLocations["company-notHq"][x].addressLine2 %>" placeholder="Address Line #2"></div>
    <div class="styledSelect">
      <select class="companyCountry" name="companyCountry" id="companyCountry" onchange="print_state('companyProvince',this.selectedIndex);"> 
        <!-- edit_country() will populate this dropdown -->
      </select>
    </div>

    <div class="row insideForm">
      <div class="col-sm-7">
        <div class="styledSelect inputColumnL">
          <select class="companyProvince" name="companyProvince" id="companyProvince">
            <option value="<%= companyLocations["company-notHq"][x].province %>" selected="selected"><%= companyLocations["company-notHq"][x].province %></option>
          </select><script language="javascript">edit_country("<%= companyLocations["company-notHq"][x].country %>", "companyCountry");</script>
        </div>
      </div>

      <div class="col-sm-5 inputColumnR">
        <div class="breakForm">
          <input type="text" class="companyPostalCode" name="companyPostalCode" value="<%= companyLocations["company-notHq"][x].postalCode %>" placeholder="Postal Code">
        </div>
      </div>
    </div>
  <% } %>
<% } %>

