<% if (req.session.flash) { %>
  <div style="text-align: center;" id="incorrect-login-error"><%= req.flash('error') %></div>
<% } %>

<%- partial('../partials/mktheaderline') %>

<div class="container" id="signUp">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1 col-sm-12 col-sm-offset-0">
      <div class="row">
        <div class="col-sm-6 col-sm-push-6 signUpForm">
          <h2>Welcome to Procur.<br/>Sign up for Early Access below:</h2>
          <form action="/register" method="post">
            <div><input type="text" name="firstName" placeholder="First Name*"></div>
            <div><input type="text" name="lastName" placeholder="Last Name*"></div>
            <div><input type="text" name="email" placeholder="Business Email Address*"></div>
            <div><input type="password" name="password" placeholder="Create a Password*"></div>
            <div><input type="password" name="passwordConfirm" placeholder="Create a Password*"></div>
            <div><button type="submit" class="registerButton">Create my account</button></div>
          </form>
          <div class="orText"><p>or</p></div>
          <div class="orLine"></div>
          <a class="loginButton" href="/login"><button>Already have an account? Sign In.</button></a>
        </div>
        <div class="col-sm-6 col-sm-pull-6 moreInfo"> 
          <h1>We will be launching our full platform this summer. Get in before we launch by signing up for Early Access now.</h1>
          <div class="dottedLine"></div>
          <div class="featuresColumn">
            <h4>Currently Accessible:</h4>
            <div class="rightSec">
              <div class="rightSecBox">
              <i class="fa fa-gear fa-fw"></i>
              </div>
              <a href="/earlyaccess#ea-companyProfiles">Company Profile</a>
            </div>

            <h4>Features Coming Soon:</h4>
            <div class="rightSec">
              <div class="rightSecBox">
              <i class="fa fa-envelope fa-fw"></i>
              </div>
              <a href="/earlyaccess#ea-uploadPhotos">Company Photos</a>
            </div>
            <div class="rightSec rightAlt">
              <div class="rightSecBox">
              <i class="fa fa-search fa-fw"></i>
              </div>
              <a href="/earlyaccess#ea-supplierCapabilities">Supplier Capabilities</a>
            </div>
            <div class="rightSec">
              <div class="rightSecBox">
              <i class="fa fa-truck fa-fw"></i>
              </div>
              <a href="/earlyaccess#ea-downloadableFiles">Downloadable Files</a>
            </div>
            <div class="rightSec rightAlt">
              <div class="rightSecBox">
              <i class="fa fa-th-large fa-fw"></i>
              </div>
              <a href="/earlyaccess#ea-communityResources">Community Resources</a>
            </div>
            <div class="rightSec">
              <div class="rightSecBox">
              <i class="fa fa-user fa-fw"></i>
              </div>
              <a href="/earlyaccess#ea-productProfiles">Product Profiles</a>
            </div>
          </div>
        </div>
      </div>
    </div>    
  </div>
</div>

